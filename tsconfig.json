{
	"compilerOptions": {
		"lib": ["dom", "esnext", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"rootDir": "src",
		"strict": true,
		"target": "es2022",
		"removeComments": false,
		"outDir": "dist",
		"baseUrl": ".",
		"noEmit": false,
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true
	}
}
